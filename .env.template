# ===== Copy to .env and fill in =====
# Azure Speech (either a single key or a pool via SPEECH_RESOURCES JSON)
SPEECH_REGION=eastus2
SPEECH_KEY=YOUR_SPEECH_KEY
# Optional pool: SPEECH_RESOURCES=[{"region":"eastus2","key":"..."}]

# Azure Agent Service (your runner endpoint)
PROJECT_ENDPOINT=https://<acct>.services.ai.azure.com/api/projects/<project-id-or-name>
AGENT_ID=<your-agent-id>
AGENT_TOKEN=<bearer-or-msi-token>

# UI brand
HITACHI_RED=#E60027

# Avatar config (optional but recommended)
AVATAR_ID=lisa                 # or your actual avatar id
AVATAR_STYLE=casual-sitting    # e.g., standing, head-and-shoulders, etc.
SPEECH_LANG=en-US
SPEECH_VOICE=en-US-JennyNeural

# If your agent has a custom URL, set it here to override the default builder:
# AGENT_RUN_URL=https://<your-service>/agents/<id>/run
# Optional: override agent run URL (else PROJECT_ENDPOINT/agents/AGENT_ID/run)=
AGENT_RUN_URL=

# Log level for backend: CRITICAL|ERROR|WARNING|INFO|DEBUG
LOG_LEVEL=INFO
AGENT_API_KEY=
AGENT_AUTH_RESOURCE=https://ai.azure.com
